@model HomeVM
<section class="hero-section">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <div class="text-center mb-5 pb-2">
                    <h1 class="text-white">Library Book for the knowledge</h1>

                    <p class="text-white">Read everywhere. Explore your fav books.</p>

                    <a href="#section_2" class="btn custom-btn smoothscroll mt-3">Start reading</a>
                </div>

                <div class="owl-carousel owl-theme">

                   @await Component.InvokeAsync("NewContent")
                </div>
            </div>

        </div>
    </div>
</section>


<section class="latest-podcast-section section-padding pb-0" id="section_2">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Special Books</h4>
                </div>
            </div>
            @await Component.InvokeAsync("SpecialContent")
        </div>
    </div>
</section>

<section class="topics-section section-padding pb-0" id="section_3">
   @await Component.InvokeAsync("TopicBanner")
</section>

<section class="trending-podcast-section section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Trending Books</h4>
                </div>
            </div>

           @await Component.InvokeAsync("TrendingContent")

        </div>
    </div>
</section>