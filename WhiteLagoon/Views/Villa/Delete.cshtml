@model Villa
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Update Villa</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="col-6">
            <img src="@Model.ImageUrl" width="75%" />
        </div>
        <form class="row" method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="p-3">
                @*  <div asp-validation-summary="ModelOnly"></div> *@

                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="Name" disabled class="form-control border shadow" />
                    <label class="ms-2" asp-for="Name">Name</label>
                   
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" disabled asp-for="Description" class="form-control border shadow" />
                    <label class="ms-2" asp-for="Description">Description</label>
                   
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="Price" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="Price">Price</label>
                   
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="Sqft" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="Sqft">Sqft</label>
                  
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="Occupancy" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="Occupancy">Occupancy</label>
                   
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="ImageUrl" hidden class="form-control border shadow" disabled />
                    <input asp-for="Image" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="ImageUrl">ImageUrl</label>
                   
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary w-100" asp-controller="Villa" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}