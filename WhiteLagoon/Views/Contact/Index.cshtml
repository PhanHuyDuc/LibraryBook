@model IEnumerable<Contact>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Contact</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
       
        <table class="table table-bordered table-striped" id="Contact_tbl">
            <thead>
                <tr>
                    <th>
                        Full Name Contact
                    </th>
                    <th>Email</th>
                    <th>Company</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Email</td>
                        <td>@obj.Company</td>
                        <td>@obj.Description</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Contact" asp-action="Delete" asp-route-ContactId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Contact_tbl').DataTable();
        });
    </script>
}