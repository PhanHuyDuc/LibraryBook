@model Menu
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Create Menu</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form class="row" method="post">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="MenuName" class="form-control border shadow" />
                    <label class="ms-2" asp-for="MenuName">Menu Name</label>
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="ParentId" class="form-control border shadow" />
                    <label class="ms-2" asp-for="ParentId">Menu Parent Name</label>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="MenuLink" class="form-control border shadow" />
                    <label class="ms-2" asp-for="MenuLink">Menu Link</label>
                    <span asp-validation-for="MenuLink" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="Order" class="form-control border shadow" />
                    <label class="ms-2" asp-for="Order">Order</label>
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary w-100" asp-controller="Menu" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}