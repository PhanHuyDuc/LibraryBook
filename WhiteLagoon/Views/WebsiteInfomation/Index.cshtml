@model IEnumerable<LibraryBook.Domain.Entities.WebsiteInfomation>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Website Infomation</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
       
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Website Name
                    </th>
                    <th>WebsiteAddress</th>
                    <th>WebsitePhoneNumber</th>
                    <th>WebsiteEmail</th>
                    <th>Fax</th>
                    <th>WebsiteUrl</th>
                    <th>WebsiteTitle</th>
                    <th>WebsiteAdminTitle</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.WebsiteName</td>
                        <td>@obj.WebsiteAddress</td>
                        <td>@obj.WebsitePhoneNumber</td>
                        <td>@obj.WebsiteEmail</td>
                        <td>@obj.Fax</td>
                        <td>@obj.WebsiteUrl</td>
                        <td>@obj.WebsiteTitle</td>
                        <td>@obj.WebsiteAdminTitle</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="WebsiteInfomation" asp-action="Update" asp-route-websiteInfomationId="@obj.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>