@model VillaNumberVM
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Villa Number</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form class="row" method="post">
            <input asp-for="VillaNumber.Villa_Number" hidden />
            <div class="p-3">

                <div class="form-floating py-1 col-12">
                    <select class="form-select border shadow" disabled asp-for="@Model.VillaNumber.VillaId" asp-items="@Model.VillaList">
                        <option disabled selected>--Select Villa--</option>
                    </select>
                    <label class="ms-2" asp-for="VillaNumber.VillaId">VillaId</label>
                    <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="VillaNumber.Villa_Number" disabled class="form-control border shadow" />
                    <label class="ms-2" asp-for="VillaNumber.Villa_Number">Villa_Number</label>
                    <span asp-validation-for="VillaNumber.Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="VillaNumber.SpecialDetails" disabled class="form-control border shadow" />
                    <label class="ms-2" asp-for="VillaNumber.SpecialDetails">SpecialDetails</label>
                    <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary w-100" asp-controller="VillaNumber" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}