@model IEnumerable<Banner>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Banner</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Banner" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Banner
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped" id="bannerTable">
            <thead>
                <tr>
                    <th>Banner Category</th>
                    <th>Banner Name</th>
                    <th>Description</th>                    
                    <th>Menu Link</th>
                    <th>Order</th>
                    <th>Banner Avata</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.BannerCategory.Name</td>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                        <td>@obj.BannerLink</td>
                        <td>@obj.Order</td>
                        <td>@obj.BannerUrl</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @{
                                    if (obj.IsActive)
                                    {
                                        <a asp-controller="Banner" asp-action="ChangeStatusBanner" asp-route-bannerId="@obj.Id"
                                           class="btn btn-success mx-2">
                                            <i class="bi bi-play-fill"></i> Active
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Banner" asp-action="ChangeStatusBanner" asp-route-bannerId="@obj.Id"
                                           class="btn btn-warning mx-2">
                                            <i class="bi bi-pause-fill"></i> Disable
                                        </a>
                                    }
                                }
                                <a asp-controller="Banner" asp-action="Update" asp-route-bannerId="@obj.Id"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                                <a asp-controller="Banner" asp-action="Delete" asp-route-bannerId="@obj.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bannerTable').DataTable();
        });
    </script>
}