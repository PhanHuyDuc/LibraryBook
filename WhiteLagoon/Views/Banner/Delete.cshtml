@model BannerVM
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Update Banner</h1>
            </div>
        </div>
    </div>
    <div class="col-12 text-center">
        <img src="@Model.Banner.BannerImageUrl" alt="@Model.Banner.Name" style="width:840px;height:400px" />
    </div>
    <div class="card-body border p-4">
        <form class="row" method="post" enctype="multipart/form-data">
            <input asp-for="Banner.Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <select class="form-select border shadow" asp-for="@Model.Banner.BannerCategoryId" asp-items="@Model.BannerCategoryList" disabled>
                        <option disabled selected>--Select Banner Category--</option>
                    </select>
                    <label class="ms-2" asp-for="Banner.BannerCategoryId">Menu Category</label>
                    <span asp-validation-for="Banner.BannerCategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="@Model.Banner.Name" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="@Model.Banner.Name">Banner Name</label>
                    <span asp-validation-for="@Model.Banner.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="@Model.Banner.Description" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="@Model.Banner.Description">Description</label>
                    <span asp-validation-for="@Model.Banner.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="@Model.Banner.BannerImageUrl" hidden class="form-control border shadow" disabled />
                    <input type="file" asp-for="@Model.Banner.BannerImage" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="@Model.Banner.BannerImageUrl">ImageUrl</label>
                    <span asp-validation-for="@Model.Banner.BannerImageUrl" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="text" asp-for="@Model.Banner.BannerLink" class="form-control border shadow" disabled />
                    <label class="ms-2" asp-for="@Model.Banner.BannerLink">BannerLink</label>
                    <span asp-validation-for="@Model.Banner.BannerLink" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input type="number" asp-for="@Model.Banner.Order" class="form-control border shadow" value="1" disabled />
                    <label class="ms-2" asp-for="@Model.Banner.Order">Order</label>
                    <span asp-validation-for="@Model.Banner.Order" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary w-100" asp-controller="Banner" asp-action="Index">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
